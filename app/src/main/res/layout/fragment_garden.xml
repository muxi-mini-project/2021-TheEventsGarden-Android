<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF3F2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#C3B4B4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Garden"
            android:textColor="#ffffffff"
            android:textSize="32sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/garden_notice_foreground"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingTop="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_gravity="center">
            <ImageView
                android:id="@+id/iv_garden_shop"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/garden_notice_foreground"
                android:background="#EEAB74"
                 />
        <ImageView
            android:id="@+id/iv_garden_bag"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/garden_notice_foreground"
            android:background="#F3CD86"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_garden_flower"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@mipmap/garden_bag_flower1_foreground"
        android:layout_gravity="center" />
    <ImageView
        android:id="@+id/iv_garden_pick"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/garden_pick_foreground"
        android:background="@drawable/garden_pick_background"
        android:layout_gravity="right"
        android:padding="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#EBFCF5" />




</LinearLayout>