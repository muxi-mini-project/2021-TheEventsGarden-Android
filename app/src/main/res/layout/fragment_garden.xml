<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF3F2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#C3B4B4">
        <ImageView
            android:id="@+id/iv_data_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/data_left_foreground"
            android:tint="#ffffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Garden"
            android:textColor="#ffffffff"
            android:textSize="28sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_garden_notice"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/garden_notice_foreground"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">
            <ImageView
                android:id="@+id/iv_garden_shop"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/face_foreground"/>
        <ImageView
            android:id="@+id/iv_garden_bag"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/bag_foreground"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_garden_flower"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@mipmap/garden_bag_flower1_foreground"
        android:layout_gravity="center" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_garden_pick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/garden_pick_foreground"
            android:background="@drawable/garden_pick_background"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

</LinearLayout>