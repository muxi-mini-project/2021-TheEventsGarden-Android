<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7FBAB6">
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="110dp"
        android:src="@mipmap/data_head_foreground"
        android:layout_gravity="center"/>
   <EditText
       android:id="@+id/et_user"
       android:layout_width="240dp"
       android:layout_height="40dp"
       android:background="@drawable/register_et_background"
       android:layout_gravity="center"
       android:layout_marginTop="45dp"
       android:hint="请输入学号"
       android:gravity="center"
       android:textSize="16sp"
       android:textStyle="bold"
       android:textColor="#2F7897"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/register_et_background"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="密码"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2F7897"/>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:background="@drawable/register_in_background"
        android:text="登录"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#E7EDD3"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"/>

</LinearLayout>